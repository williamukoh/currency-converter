<!doctype html>
<html class="no-js" lang="en-NG">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <title>Currency Converter - ALCWithGoogle #7DaysofCodeChallenge</title>
        <meta name="description" content="Currency Concerter - ALCWithGoogle #7DaysofCodeChallenge">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <link rel="stylesheet" href="assets/css/build.min.css">
    </head>
    <body>

    <div class="preloader-wrapper">
        <div class="preloader">
            <div class="sk-rotating-plane"></div>
        </div>
    </div>
  
    <div class="page-wrapper">
    
        <div class="header-wrapper">
        
            <header role="banner" class="main-header">
                
                <nav class="navbar" role="navigation" aria-label="main navigation">

                    <div class="navbar-brand">

                        <a class="navbar-item" href="http://williamukoh.github.io/currencyconverter">
                            Currency <span>Converter</span>
                        </a>

                        <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false">
                            <span aria-hidden="true"></span>
                            <span aria-hidden="true"></span>
                            <span aria-hidden="true"></span>
                        </a>

                    </div>

                    <div class="navbar-menu">
                        <div class="navbar-end">
                            <a class="navbar-item" href="index.html">Home</a>
                            <a class="navbar-item" href="about.html">About</a>
                            <a class="navbar-item" href="http://github.com/williamukoh/currency-converter">Github</a>
                        </div>
                    </div>

                </nav>
                
            </header>
        
        </div>

        <div class="main-wrapper">

            <main role="main" class="main">

                <header>
                    <h1>Currency Converter</h1>
                    <p>Convert one currency to another. It's that simple.</p>
                </header>

                <section class="converter-wrapper">

                    <div class="tabs is-medium">
                        <ul>
                            <li class="is-active"><a id="tab1Btn">Convert</a></li>
                            <li><a id="tab2Btn">History</a></li>
                        </ul>
                    </div>

                    <div class="tabs-content">

                        <div class="tab1 tab convert-tab" id="tab1">
                            <form class="convert-form">
                                <div class="from-field field">
                                    <label class="label">Convert from</label>
                                    <div class="control">
                                        <div class="select">
                                            <select id="c1Field">
                                                <option>Select currency</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="to-field field">
                                    <label class="label">To</label>
                                    <div class="control">
                                        <div class="select">
                                            <select id="c2Field">
                                                <option>Select currency</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="amount-field field">
                                    <label class="label">Enter Amount</label>
                                    <div class="control">
                                        <input type="number" class="input" placeholder="0.00">
                                    </div>
                                </div>
                                <div class="field">
                                    <div class="control">
                                        <a class="submit-btn button is-medium is-black" id="convertBtn">Convert</a>
                                    </div>
                                </div>
                            </form>
                        </div>

                        <div class="tab2 tab history-tab" id="tab2">
                            History
                        </div>

                    </div>

                </section>

            </main>

        </div>

        <div class="footer-wrapper">

            <footer role="contentinfo">

            </footer>

        </div>
    
    </div>

        {% include "partials/header.nunjucks" %}

        {% block content %} {% endblock %}

        <script src="assets/js/build.js"></script>
    </body>
</html>
